<div style="max-width: 400px; margin: 80px auto; background: #16203a; padding: 40px; border: 2px solid #3b82f6; border-radius: 15px; color: white; text-align: center; box-shadow: 0 0 25px rgba(59, 130, 246, 0.4);">
    <h2 style="margin-bottom: 30px; letter-spacing: 2px; font-weight: bold;">LOGOWANIE</h2>

    <input type="email" id="logEmail" placeholder="E-mail" style="width: 100%; padding: 12px; margin-bottom: 20px; background: #0a1120; border: 1px solid #3b82f6; border-radius: 5px; color: white;">
    <input type="password" id="logPass" placeholder="Hasło" style="width: 100%; padding: 12px; margin-bottom: 15px; background: #0a1120; border: 1px solid #3b82f6; border-radius: 5px; color: white;">

    <div style="display: flex; justify-content: space-between; font-size: 12px; margin-bottom: 25px; color: #94a3b8;">
        <label style="cursor: pointer;"><input type="checkbox"> Zapamiętaj dane</label>
        <a href="#" style="color: #94a3b8; text-decoration: none;">Zapomniałeś hasła?</a>
    </div>

    <button onclick="performLogin()" style="width: 100%; padding: 15px; background: #3b82f6; color: white; border: none; font-weight: bold; cursor: pointer; border-radius: 8px; transition: 0.3s;">ZALOGUJ SIĘ</button>

    <div style="margin-top: 40px; border-top: 1px solid #3b82f6; padding-top: 20px;">
        <p style="font-size: 11px; color: #94a3b8; margin-bottom: 10px; text-transform: uppercase;">Nie masz konta?</p>
        <a href="/Home/Rejestracja" style="display: block; width: 100%; padding: 10px; border: 2px solid #3b82f6; color: white; text-decoration: none; font-weight: bold; border-radius: 8px;">STWÓRZ KONTO PIXEL</a>
    </div>
</div>

<script>
function performLogin() {
    const email = document.getElementById('logEmail').value;
    const pass = document.getElementById('logPass').value;

    if (email && pass) {
        alert("Zalogowano pomyślnie do Kino Pixel! Witamy.");
        window.location.href = '/';
    } else {
        alert("Proszę uzupełnić e-mail i hasło!");
    }
}
</script>