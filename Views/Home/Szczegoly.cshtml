@model kinoprojekt.Models.Film
@{ Layout = null; }

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>@Model.Tytul - Szczeg√≥≈Çy</title>
    <style>
        body { background: #0a1120; color: white; font-family: 'Segoe UI', sans-serif; margin: 0; padding: 20px; }
        .container { 
            max-width: 1100px; margin: 50px auto; background: #16203a; 
            border-radius: 20px; overflow: hidden; display: flex; 
            box-shadow: 0 20px 50px rgba(0,0,0,0.5); border: 1px solid #2d3748;
        }
        
      
        .poster-section { flex: 0 0 400px; background: #000; display: flex; align-items: center; justify-content: center; overflow: hidden; }
        .poster-section img { width: 100%; height: 100%; object-fit: cover; }

        .info-section { flex: 1; padding: 40px; }
        .back-link { color: #3b82f6; text-decoration: none; font-weight: bold; display: block; margin-bottom: 20px; font-size: 14px; }
        
        .badge-row { display: flex; gap: 10px; margin-bottom: 20px; }
        .badge { background: #3b82f6; padding: 5px 15px; border-radius: 20px; font-weight: bold; font-size: 13px; }
        
        h1 { font-size: 52px; margin: 0 0 10px 0; color: #fff; }
        .category { color: #94a3b8; font-weight: bold; text-transform: uppercase; letter-spacing: 1px; font-size: 14px; margin-bottom: 30px; display: block; }
        
        .description { font-size: 18px; line-height: 1.6; color: #cbd5e1; margin-bottom: 30px; }

        
        .specs { background: #1e294b; padding: 25px; border-radius: 15px; border-left: 5px solid #3b82f6; margin-bottom: 30px; }
        .specs p { margin: 10px 0; font-size: 16px; }
        .label { color: #3b82f6; font-weight: bold; text-transform: uppercase; width: 110px; display: inline-block; }

      
        .actions { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
        
        .btn-trailer { 
            display: flex; align-items: center; justify-content: center; gap: 10px;
            background: #f00; color: white; text-decoration: none; 
            padding: 15px; border-radius: 12px; font-weight: bold; transition: 0.3s; 
        }
        .btn-trailer:hover { background: #c00; transform: scale(1.02); }

        .btn-buy { 
            display: block; background: #10b981; color: white; text-decoration: none; 
            padding: 15px; border-radius: 12px; font-weight: bold; 
            text-align: center; transition: 0.3s; font-size: 18px;
        }
        .btn-buy:hover { background: #059669; transform: scale(1.02); }
    </style>
</head>
<body>
    <div class="container">
        <div class="poster-section">
            <img src="@Model.Obrazek" alt="@Model.Tytul">
        </div>

        <div class="info-section">
            <a href="/" class="back-link">‚Üê POWR√ìT DO REPERTUARU</a>
            
            <div class="badge-row">
                <span class="badge">@Model.CzasTrwania</span>
                <span class="badge" style="background: #1e294b; border: 1px solid #3b82f6;">‚≠ê DZISIAJ: @Model.Godziny</span>
            </div>

            <h1>@Model.Tytul</h1>
            <span class="category">Gatunek: @Model.Kategoria</span>
            
            <p class="description">@Model.Opis</p>

            <div class="specs">
                <p><span class="label">Re≈ºyseria:</span> @Model.Rezyseria</p>
                <p><span class="label">Obsada:</span> @Model.Obsada</p>
            </div>

            <div class="actions">
                <a href="@Model.ZwiastunUrl" target="_blank" class="btn-trailer">
                    <span>üé¨</span> OBEJRZYJ ZWIASTUN
                </a>
                
                <a href="/Home/WybierzTermin/@Model.Id" class="btn-buy">KUP BILET</a>
            </div>
        </div>
    </div>
</body>
</html>